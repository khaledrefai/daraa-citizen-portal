.citizen-portal {
  display: flex;
  flex-direction: column;
  gap: 1.5rem;
}

.citizen-portal__hero {
  display: flex;
  justify-content: space-between;
  gap: 1.5rem;
  background: linear-gradient(135deg, #0f3443 0%, #34e89e 100%);
  color: #fff;
  padding: 1.5rem;
  border-radius: 1rem;
}

.citizen-portal__hero .eyebrow,
.breadcrumb-bar .eyebrow {
  text-transform: uppercase;
  letter-spacing: 0.08em;
  font-size: 0.75rem;
  opacity: 0.9;
  margin-bottom: 0.25rem;
}

.citizen-portal__hero h1,
.breadcrumb-bar h1 {
  margin: 0;
  font-size: 1.8rem;
  font-weight: 700;
}

.citizen-portal__hero .subtitle,
.breadcrumb-bar .subtitle {
  margin-top: 0.35rem;
  max-width: 640px;
  opacity: 0.95;
}

.hero-stats {
  display: grid;
  grid-template-columns: repeat(3, minmax(110px, 1fr));
  gap: 0.75rem;
  text-align: right;
}

.hero-stats p {
  margin: 0;
  font-size: 0.8rem;
  opacity: 0.8;
}

.hero-stats strong {
  display: block;
  font-size: 1.5rem;
  line-height: 1.2;
}

.filter-card {
  background: #f8f9fb;
  border: 1px solid #e9ecef;
  padding: 1rem;
  border-radius: 0.75rem;
}

.service-results {
  display: flex;
  flex-direction: column;
  gap: 1rem;
}

.service-card {
  border: 1px solid #e6e6e6;
  border-radius: 0.75rem;
  padding: 1rem;
  background: #fff;
  box-shadow: 0 6px 14px rgba(15, 52, 67, 0.08);
}

.service-card__header {
  display: flex;
  justify-content: space-between;
  gap: 1rem;
}

.service-code {
  font-size: 0.85rem;
  color: #6c757d;
  margin-bottom: 0.35rem;
}

.service-card h3 {
  margin: 0;
  font-size: 1.3rem;
}

.service-subtitle {
  margin: 0.35rem 0 0;
  color: #495057;
}

.service-meta {
  display: flex;
  gap: 0.35rem;
  align-items: center;
  flex-wrap: wrap;
}

.service-details {
  margin-top: 0.75rem;
}

.detail-label {
  margin: 0;
  text-transform: uppercase;
  font-size: 0.75rem;
  color: #6c757d;
  letter-spacing: 0.05em;
}

.detail-value {
  margin: 0.15rem 0 0;
  font-weight: 600;
}

.fees-note {
  margin: 0.75rem 0 0.5rem;
  color: #0f3443;
  font-weight: 600;
}

.fees-note span {
  color: #495057;
  font-weight: 500;
}

.service-card__actions {
  display: flex;
  justify-content: flex-end;
}

.loading-state,
.empty-state {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  color: #6c757d;
  padding: 0.5rem 0;
}

.breadcrumb-bar {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  gap: 1rem;
  padding: 1rem 0 0.25rem;
  border-bottom: 1px solid #e6e6e6;
}

.breadcrumb-bar__cta {
  display: flex;
  align-items: center;
}

.detail-layout .detail-card {
  border-radius: 0.75rem;
}

.detail-card.highlight {
  background: #0f3443;
  color: #e9ecef;
  border: 0;
}

.detail-card.highlight h3 {
  color: #fff;
}

.item-list {
  list-style: none;
  padding: 0;
  margin: 0;
  display: flex;
  flex-direction: column;
  gap: 0.75rem;
}

.item-list li {
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
  gap: 0.5rem;
}

.pill-list {
  list-style: none;
  padding: 0;
  margin: 0 0 1rem 0;
  display: flex;
  flex-direction: column;
  gap: 0.5rem;
}

.pill-list li {
  display: flex;
  justify-content: space-between;
  padding: 0.5rem 0.75rem;
  border: 1px solid rgba(255, 255, 255, 0.2);
  border-radius: 0.5rem;
}

.pill-label {
  font-size: 0.9rem;
}

.pill-value {
  font-weight: 700;
}

.side-help {
  margin-top: 1rem;
  padding: 0.75rem;
  background: rgba(255, 255, 255, 0.08);
  border-radius: 0.5rem;
}

@media (max-width: 768px) {
  .citizen-portal__hero {
    flex-direction: column;
  }

  .hero-stats {
    grid-template-columns: repeat(3, minmax(80px, 1fr));
    text-align: left;
  }

  .service-card__header {
    flex-direction: column;
  }

  .service-card__actions {
    justify-content: flex-start;
  }
}
